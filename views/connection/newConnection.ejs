<%- include('./partials/header.ejs') %>
    <div class="container">
        <div class="jumbotron">
            <form class="form">
                <div class="form-group">
                    <label for="topic">Topic:</label>
                    <input type="text" class="form-control" id="topic" placeholder="topic">
                </div>
                <div class="form-group">
                    <label for="title">Title:</label>
                    <input type="text" class="form-control" id="title" placeholder="title">
                </div>
                <div class="form-group">
                    <label for="host">Host:</label>
                    <input type="text" class="form-control" id="host" placeholder="host">
                </div>
                <div class="form-group">
                    <label for="details">Details:</label>
                    <textarea class="form-control" id="details" placeholder="details"></textarea>
                </div>
                <div class="form-group">
                    <label for="where">Where:</label>
                    <input type="text" class="form-control" id="where" placeholder="location">
                </div>
                <div class="form-group">
                    <label for="date">Date:</label>
                    <div class='input-group date' id='date'>
                        <input type='text' class="form-control" placeholder="mm/dd/yyyy"/>
                        <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>
        
                </div>
                <div class="form-group">
                    <label for="start">Start:</label>
                    <div class='input-group time' id='start'>
                        <input type='text' class="form-control" placeholder="12:00 AM"/>
                        <span class="input-group-addon">
                        <span class="glyphicon glyphicon-time"></span>
                        </span>
                    </div>
                </div>
                <div class="form-group">
                    <label for="end">End:</label>
                    <div class='input-group time' id='end'>
                        <input type='text' class="form-control" placeholder="11:59 PM" />
                        <span class="input-group-addon">
                        <span class="glyphicon glyphicon-time"></span>
                        </span>
                    </div>
                </div>
                <div class="form-group">
                    <label for="image">Image URL:</label>
                    <div class="input-group image" id="image">
                        <input type="text" class="form-control" id="image" placeholder="imageURL">
                        <span class="input-group-addon">
                        <span class="glyphicon glyphicon-folder-open"></span>
                        </span>
                    </div>
                </div>
                <button type="submit" class="btn btn-success">Submit</button>
            </form>

        </div>
    </div>
<%- include('./partials/footer.ejs') %>