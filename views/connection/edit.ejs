<%- include('../partials/header.ejs') %>
    <div class="container">
        <div class="jumbotron">
            <form method="POST" action="/connections/<%= connection.id%>?_method=PUT">
                <div class="form-group">
                    <label for="title">Title:</label>
                    <input type="text" class="form-control" id="title" name="title" value="<%= connection.title %>">
                </div>
                <div class="form-group">
                    <label for="details">Details:</label>
                    <textarea type="text" class="form-control" id="details" name="details"><%= connection.details %></textarea>
                </div>   
                <button type="submit" class="btn btn-success">Submit</button>  
            </form>
        </div>
    </div>
<%- include('../partials/footer.ejs') %>