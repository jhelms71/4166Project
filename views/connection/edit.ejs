<%- include('../partials/header.ejs') %>
    <div class="container">
        <div class="jumbotron">
            <form method="POST" action="/connections/<%= connection.id%>?_method=PUT">
                <div class="form-group">
                    <label for="title">Title:</label>
                    <input type="text" class="form-control" id="title" name="title" value="<%= connection.title %>">
                </div>
                <div class="form-group">
                    <label for="location">Location:</label>
                    <input type="text" class="form-control" id="location" name="location" value="<%= connection.location %>">
                </div>
                <div class="form-group">
                    <label for="details">Details:</label>
                    <textarea class="form-control" id="details" name="details"><%= connection.details %></textarea>
                </div>   
                <div class="form-group">
                    <label for="date">Date:</label>
                    <div class='input-group date'>
                        <input type='text' class="form-control" id='date' name="date" value='<%= connection.date %>'/>
                        <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>
                </div>
                <div class="form-group">
                    <label for="startTime">Start:</label>
                    <div class='input-group time' >
                        <input type='text' class="form-control" id='startTime' name="startTime" value='<%= connection.startTime %>'/>
                        <span class="input-group-addon">
                        <span class="glyphicon glyphicon-time"></span>
                        </span>
                    </div>
                </div>
                <div class="form-group">
                    <label for="endTime">End:</label>
                    <div class='input-group time'>
                        <input type='text' class="form-control" id='endTime' name="endTime" value='<%= connection.endTime %>' />
                        <span class="input-group-addon">
                        <span class="glyphicon glyphicon-time"></span>
                        </span>
                    </div>
                </div>
                <button type="submit" class="btn btn-success">Submit</button>  
            </form>
        </div>
    </div>
<%- include('../partials/footer.ejs') %>